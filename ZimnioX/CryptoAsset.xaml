<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZimnioX.CryptoAsset">
    <VerticalStackLayout>
        <Label
            Text="Właściciel kryptoaktywa"
            SemanticProperties.HeadingLevel="Level6"
            HorizontalOptions="Start" />
        <Entry Placeholder="Jan Kowalski" />
        <Label
            Text="Nazwa kryptoaktywa"
            SemanticProperties.HeadingLevel="Level6"
            HorizontalOptions="Start" />
        <Entry Placeholder="Bitcoin (BTC)" />
        <Label
            Text="Ilość kryptoaktywa"
            SemanticProperties.HeadingLevel="Level6"
            HorizontalOptions="Start" />
        <Entry Placeholder="100" Keyboard="Numeric" TextChanged="NumericEntry_TextChanged"/>
    </VerticalStackLayout>
</ContentView>
